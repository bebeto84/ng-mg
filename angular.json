{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "libs",
  "projects": {
    "loading-if": {
      "root": "libs/loading-if",
      "sourceRoot": "libs/loading-if/src",
      "projectType": "library",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "libs/loading-if/tsconfig.lib.json",
            "project": "libs/loading-if/ng-package.json"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "libs/loading-if/src/test.ts",
            "tsConfig": "libs/loading-if/tsconfig.spec.json",
            "karmaConfig": "libs/loading-if/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "libs/loading-if/tsconfig.lib.json",
              "libs/loading-if/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "ng-mg"
}